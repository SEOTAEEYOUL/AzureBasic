{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "mysqlServerName": {
      "type": "string",
      "metadata": {
        "description": "The MySQL server name"
      }
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "The Virtual Network Network name for Private Endpoint"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "The Virtual Network Network Prefix for Private Endpoint"
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "The Subnet name for Private Endpoint"
      }
    },
    "privateIpAddress": {
      "type": "string",
      "defaultValue": "10.0.1.5",
      "metadata": {
        "description": "The private ip address for Private Endpoint"
      }
    }
  },
  "functions": [],
  "variables": {
    "nicName": "[format('{0}-{1}.{2}','PE', parameters('mysqlServerName'), 'nic')]",
    "ipConfigName": "[format('{0}.{1}', 'privateEndpointIpConfig', variables('nicName'))]",
    "privateEndPointName": "[format('{0}-{1}', 'PE', parameters('mysqlServerName'))]",
    "privateDnsZoneName": "[format('{0}.{1}', 'privatelink', 'mysql.database.azure.com')]",
    "privatendpointdnsgroupname": "[format('{0}/{1}', variables('privateEndpointName'), 'mydnsgroupname')]"
  },
  "resources": [
    {
      "name": "[variables('nicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "[variables('nicName')]",
        "environment": "dev",
        "personalInformation": "no",
        "serviceTitle": "homepage",
        "owner": "SeoTaeYeol"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('ipConfigName')]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('privateIpAddress')]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
              },
              "primary": true,
              "privateIPAddressVersion": "IPv4"
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableAcceleratedNetworking": false,
        "enableIPForwarding": false
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2020-06-01",
      "name": "[variables('privateEndpointName')]",
      "location": "[parameters('location')]",
      "tags": {
          "environment": "dev",
          "personalInformation": "no",
          "serviceTitle": "homepage",
          "owner": "SeoTaeYeol"
      },
      "properties": {
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[variables('privateEndpointName')]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.DBforMySQL/server', parameters('mysqlServerName'))]",
              "groupIds": [
                "mysqlServer"
              ],
              "privateLinkServiceConnectionState": {
                "status": "Approved",
                "description": "Auto-approved",
                "actionsRequired": "None"
              }        
            }
          }
        ],
        "manualPrivateLinkServiceConnections": [],
        "customDnsConfigs": []        
      }
    },
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2020-01-01",
      "name": "[variables('privateDnsZoneName')]",
      "location": "global",
      "tags": {
          "environment": "dev",
          "personalInformation": "no",
          "serviceTitle": "homepage",
          "owner": "SeoTaeYeol"
      },
      "properties": {
          "maxNumberOfRecordSets": 25000,
          "maxNumberOfVirtualNetworkLinks": 1000,
          "maxNumberOfVirtualNetworkLinksWithRegistration": 100,
          "numberOfRecordSets": 2,
          "numberOfVirtualNetworkLinks": 1,
          "numberOfVirtualNetworkLinksWithRegistration": 0,
          "provisioningState": "Succeeded"
      }
    },
    {
        "type": "Microsoft.Network/privateDnsZones/A",
        "apiVersion": "2018-09-01",
        "name": "[format('{0}/{1}', variables('privateDnsZoneName'), parameters('mysqlServerName'))]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
        ],
        "properties": {
            "metadata": {
                "creator": "[concat('created by private endpoint',  variables('privateEndPointName'))]"
            },
            "ttl": 10,
            "aRecords": [
                {
                    "ipv4Address": "[parameters('privateIpAddress')]"
                }
            ]
        }
    },
    {
        "type": "Microsoft.Network/privateDnsZones/SOA",
        "apiVersion": "2018-09-01",
        "name": "[concat(variables('privateDnsZoneName'), '/@')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
        ],
        "properties": {
            "ttl": 3600,
            "soaRecord": {
                "email": "azureprivatedns-host.microsoft.com",
                "expireTime": 2419200,
                "host": "azureprivatedns.net",
                "minimumTtl": 10,
                "refreshTime": 3600,
                "retryTime": 300,
                "serialNumber": 1
            }
        }
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2020-01-01",
      "name": "[concat(variables('privateDnsZoneName'), '/', variables('privateDnsZoneName'), '-link')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"        
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
      "apiVersion": "2020-11-01",
      "name": "[variables('privatendpointdnsgroupname')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]",
        "[variables('privateEndpointName')]"
      ],
      "properties": {
        "privateDnsZoneConfigs": [
          {
            "name": "privatelink-mysql-database-azure-com",
            "properties": {
              "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
            }
          }
        ]        
      }
    }
 ],
  "outputs": {}
}